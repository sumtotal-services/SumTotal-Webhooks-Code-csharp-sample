{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "SignatureOptions": {
    "SecretKey": "39lmysmf7bpk32apnt4vysxhvict2rz"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.RollingFile", "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "SumTotal": "Debug"
      }
    },
    "Enrich": [ "FromLogContext", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "RollingFile",
        "Args": {
          "pathFormat": "C:\\Data\\Temp\\webhooklistener-{Date}.json",
          "formatter": "Serilog.Formatting.Json.JsonFormatter",
          "restrictedToMinimumLevel": "Debug",
          "retainedFileCountLimit": "10",
          "//": "We found that that setting a template will nullify the option set for formatter. Therefore commenting out the below line",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] [{ThreadId}] [{SourceContext}] : {Message}{NewLine}{Exception}{InnerException}{ExceptionData}"
        }
      },
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Compact.RenderedCompactJsonFormatter",
          "restrictedToMinimumLevel": "Error",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] [{ThreadId}] [{SourceContext}] : {Message}{NewLine}{Exception}{InnerException}{ExceptionData}"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
